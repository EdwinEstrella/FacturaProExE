{
  "name": "factura-pro",
  "version": "1.0.0",
  "description": "Sistema de facturaci√≥n con Electron",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development npx electron .",
    "dev": "cross-env NODE_ENV=development npx electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-win-setup": "electron-builder --win --publish=never",
    "build-simple": "electron-builder --win --publish=never --config.forceCodeSigning=false",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --publish=always",
    "distribute": "node scripts/distribute.js",
    "create-release": "node scripts/create-release.js",
    "init-db": "node scripts/init-database.js",
    "release": "npm run create-release patch",
    "release-minor": "npm run create-release minor",
    "release-major": "npm run create-release major",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.facturapro.app",
    "productName": "FacturaPro ExE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!*.md",
      "!eslint.config.js"
    ],
    "extraResources": [
      {
        "from": "facturas.db",
        "to": "facturas.db"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FacturaPro ExE"
    },
    "publish": {
      "provider": "github",
      "owner": "EdwinEstrella",
      "repo": "FacturaProExE"
    }
  },
  "keywords": [
    "facturacion",
    "electron",
    "itbis"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.8",
    "cross-env": "^7.0.3",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "pdfkit": "^0.17.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0"
  }
}
